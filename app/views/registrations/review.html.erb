<h1><%= t "registration.review.caption" %></h1>

<p>
<dl>
  <dt><%= t "registration.review.details.first_name" %></dt>
  <dd><%= @response_params['first_name'] %></dd>
  <dt><%= t "registration.review.details.last_name" %></dt>
  <dd><%= @response_params['last_name'] %></dd>
  <dt><%= t "registration.review.details.email" %></dt>
  <dd><%= @response_params['payer'] %></dd>
</dl>
</p>

<p><%= t "registration.review.item" %>: <strong><%= @response_params['name'] %></strong></p>
<p><%= t "registration.review.total" %>: <strong><%= @money.format %></strong></p>

<%= link_to complete_registration_path(@registration, :token => @token, :PayerID => @payer_id), :class => "buy" do %>
  <img src="https://www.paypalobjects.com/webstatic/en_US/btn/btn_paynow_107x26.png" alt="Pay now"/>
<% end %>
